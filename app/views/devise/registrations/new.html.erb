         <!--topbar-->
         <%= render :partial => "/layouts/shared/top_bar.html.erb" %>
         <!--topbar--> 
         <!--navbar-->
         <%= render :partial => "/layouts/shared/header.html.erb" %>
         <!--navbar--> 
      </div>
      <!--header-->
      <div class="clearfix"></div>
      <div class="row">
      <!-- Slideshow 4 -->
      <%= render :partial => "/layouts/shared/home_slider.html.erb" %>

      
      <div class="clearfix"></div>
      <!----- //End-slider---->
      </div>
      <div class="clearfix"></div>
      <!--sec1-con-->
      
      <!--sec5-con-->
      <div class="navbar2">
         <!--container-->
         <div class="container">
            <ul>
               <li><a class="active" href="javascript:void(0);" id="registration">Registration</a></li>
               <li><a href="javascript:void(0);" id="login">Login</a></li>
            </ul>
         </div>
         <!--container-->
      </div>
     <div class="section2 crite contact" id="sec1">
      <div style="margin-top:10px;">
          <%= devise_error_messages! %>
          <% flash.each do |name, msg| %>
            <%= content_tag :div, msg, :id => "flash_#{name}" %>
          <% end %>
        </div> 
         <!--container-->
         <div class="container">
            <div class="clearfix">&nbsp;</div>
            <div class="title">
               <h1>Register</h1>
            </div>
            <div class="clearfix"></div>
            <div class="col-lg-12">
               <!--<p>Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat.</p>-->
            </div>
            <div class="clearfix"></div>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name),:html => {:id=>"user_signup"}) do |f| %>
              <div class="col-lg-6 col-md-6 col-sm-6">
              
               
                <div class="cell">
                  <%= f.email_field :email, :placeholder=>"Email" ,:class=>"textfield"  , :required => true%> 
                </div>
                <div class="cell">
                  <%= f.password_field :password, :placeholder=>"Password" ,:class=>"textfield",autocomplete: "off" , :required => true%>
                </div>
                <div class="cell">
                  <%= f.password_field :password_confirmation, :placeholder=>"Password Confirmation" ,:class=>"textfield",autocomplete: "off" , :required => true, :equalTo => "#investor_password"%>
                </div>
                 <div class="cell">
                  <input type="checkbox" name="mailchimp_reg" checked="true"/> Subscribe To Our Newsletter
                </div>
              </div>
              <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="cell"> 
                  <%= f.text_field :first_name, :placeholder=>"First Name" ,:class=>"textfield" , :required => true%>       
                </div>
                <div class="cell">
                  <%= f.text_field :last_name, :placeholder=>"Last Name" ,:class=>"textfield" , :required => true %> 
                </div>
                <div class="cell">
                  <%= f.country_select :country, {priority: %w(US GB), prompt: 'Please select a country'},:class=>"textfield" , :required => true %>
                </div>
               
                <div class="cell">
                  <%= f.submit "CREATE ACCOUNT", :class=>"subbtn submit-btn" %>
                </div>  
              </div>
             
              <div class="clearfix"></div>


               <div class="wp-social-login-widget" style="margin-left:10px;">
                  <div class="clearfix"></div>
                  <p style="width:100%; margin:20px 0px; text-align:center; font-size:16px;">Or Sign In With Your Social Media Account</p>
                  <div class="clearfix"></div>

                  <!--<div class="wp-social-login-connect-with" >-->
                  <div style="width:100%; float:left;">
                  <div style="width:246px; margin:0px auto; text-align:center; float:none; display:block;" >

                    
                    <span style="width:120px; float:left; text-align:center;">
                      <p style="width:100%; text-align:center; font-size:13px;">LinkedIn</p>
                      <a rel="nofollow" href="<%= investor_omniauth_authorize_path(:linkedin) %>" class="wp-social-login-provider wp-social-login-provider-linkedin" data-provider="LinkedIn"> <%= image_tag("linkedin.png",:alt=>"LinkedIn" ,:title=>"Connect with LinkedIn",:style=>"width:32px;height:32px;") %></a>
                    </span> 
                    

                    
                    <span style="width:120px; float:left; text-align:center;">
                      <p style="width:100%; text-align:center; font-size:13px;">AngelList</p>
                      <a rel="nofollow" href="<%= investor_omniauth_authorize_path(:angellist) %>" class="wp-social-login-provider wp-social-login-provider-linkedin" data-provider="angellist"> <%= image_tag("angllist.png",:alt=>"AnglList" ,:title=>"Connect with AngelList",:style=>"width:32px;height:32px; background:#fff;") %></a>
                    </span> 
                    

                  </div>
                  </div>

                  <div class="wp-social-login-widget-clearing"></div>
                </div>

                  <div class="clearfix"></div>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div style="width:60%; margin:20px auto; text-align:center;">
                      <p style="width:100%; text-align:center;">Already Registered? <a href="<%= new_investor_session_path %>">Login</a></p>
                    </div>



            <% end %>

            <div class="clearfix"></div>
            <div class="mbtm"></div>
         </div>
         <!--container-->
      </div>
      </div>

      <div class="clearfix"></div>
      <div class="section2 crite contact" id="sec2" style="display:none;">
      <div style="margin-top:10px;">
          <%= devise_error_messages! %>
          <% flash.each do |name, msg| %>
            <%= content_tag :div, msg, :id => "flash_#{name}" %>
          <% end %>
        </div> 
         <!--container-->
         <div class="container">
            <div class="title">
               <h1>Login</h1>
            </div>
            <div class="clearfix"></div>
            <div class="col-lg-12">
               <!--<p>Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat.</p>-->
            </div>
            <div class="clearfix"></div>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name),:html => {:id=>"user_signin"}) do |f| %>
              <div class="col-lg-6 col-md-6 col-sm-6">
                <% if !cookies[:remember_me_id].blank? %>
                  <%  if ( Investor.find_by_id(cookies[:remember_me_id]) and Digest::SHA1.hexdigest(Investor.find_by_id(cookies[:remember_me_id]).email)[4,18] == cookies[:remember_me_code]) %>
                    <div class="cell">
                      <%= f.email_field :email, :placeholder=>"Email" ,:class=>"textfield" ,:autofocus => true, :required=> true ,:value => Investor.find(cookies[:remember_me_id].to_i).email%> 
                    </div>
                    <div class="cell">
                      <%= f.password_field :password, :placeholder=>"Password" ,:class=>"textfield",autocomplete: "off", :required=> true , :value => cookies[:remember_me_pass]%>
                    </div>
                    <div class="cell"><%= f.check_box :remember_me, :checked=> true %> <%= f.label :remember_me %></div>
                  <% end %>
                <% else %>
                  <div class="cell">
                    <%= f.email_field :email, :placeholder=>"Email" ,:class=>"textfield" ,:autofocus => true, :required=> true %> 
                  </div>
                  <div class="cell">
                    <%= f.password_field :password, :placeholder=>"Password" ,:class=>"textfield",autocomplete: "off", :required=> true %>
                  </div>
                  <div class="cell"><%= f.check_box :remember_me, :checked=>false %> <%= f.label :remember_me %></div>
                <% end %>    
                <div class="clearfix"></div>
                <%= f.submit "SIGN IN", :class=>"subbtn submit-btn" %>
                <div class="clearfix"></div>
                <div class="clearfix"></div>
                <p>
                 <div class="clearfix"></div>
                  <a href="<%= new_password_path(resource_name) %>#sec4">Forgot Password</a> or <a href="<%= new_investor_registration_path %>#sec4">Register</a>
                </p>
              </div>
            <% end %>
            <div class="col-lg-6 col-md-6 col-sm-6">
               <div class="wp-social-login-widget">
                <div class="wp-social-login-connect-with">Connect with: &nbsp;
                  <span class="wp-social-login-provider-list">
                    <a rel="nofollow" href="<%= investor_omniauth_authorize_path(:linkedin) %>" class="wp-social-login-provider wp-social-login-provider-linkedin" data-provider="LinkedIn"> <%= image_tag("linkedin.png",:alt=>"LinkedIn" ,:title=>"Connect with LinkedIn",:style=>"width:32px;height:32px;") %></a>
                  </span> 
                </div>
                <div class="wp-social-login-widget-clearing"></div>
              </div>
            </div>
            <div class="clearfix"></div>
            <div class="mbtm"></div>
         </div>
         <!--container-->
      </div>
      <!--sec5-con-->
      <div class="clearfix"></div>

      
      

      <!--footer-->
      <%= render :partial => "/layouts/shared/footer.html.erb" %>

               <div class="raise">
                  <h1>$<%= @investment_opportunity.proposed_valuation %></h1>
                  <p>Proposed Valuation (Pre-Money)</p>
               </div>
               <div class="fund">
                   <div class="sharebtn">                  
                <a class="gray" href="#">Offering Terms</a>
                </div></div>
               <div class="fund">
                   <div class="sharebtn">   
                      <a href="#"><%= @investment_opportunity.offering_term %> </a>
                   </div>
               </div>
               <div class="fund">
               <div class="invbtn">
                  <%= link_to "Invest",send_investment_email_path(@investment_opportunity.id) , :remote => true %>
               </div>
               </div>
               <div class="clearfix"></div>
            </div>
            <!--right sec-->  
            
            <div class="clearfix"></div>
    
             
            <div class="mbtm"></div>

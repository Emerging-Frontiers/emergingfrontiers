                    <div class="col-lg-10 col-md-10 col-sm-10">
                     <p><%= news_press.description %></p>
                     <a href="<%= news_press.link %>" target="new">read more</a>
                    </div>
                   </div>
                     <div class="clearfix">&nbsp;</div>
                <% end %>   
               </div>
               <!--tab4-->
              

               
              
               <!--tab5-->
              <div id="tab5" class="supp" style="display:none;">
              	<h2>Download Supporting Documents</h2>
                <ul>
                <% @documents.each do |opportunity_doc| %>
                  <% if opportunity_doc.document_content_type == "application/pdf" %>
                    <li class="pdf"><a href="http://s3-eu-west-1.amazonaws.com/emf-prod/opportunity_documents/<%= opportunity_doc.id %>/<%= opportunity_doc.document_file_name %>" target="new"><%= opportunity_doc.document_file_name %></a>
                    </li>
                  <% elsif opportunity_doc.document_content_type == 'application/msword' || opportunity_doc.document_content_type == 'applicationvnd.ms-word' || opportunity_doc.document_content_type =='applicaiton/vnd.openxmlformats-officedocument.wordprocessingm1.document' %>
                    <li class="word"><a href="http://s3-eu-west-1.amazonaws.com/emf-prod/opportunity_documents/<%= opportunity_doc.id %>/<%= opportunity_doc.document_file_name %>" target="new"><%= opportunity_doc.document_file_name %></a>
                    </li>
                  <% elsif opportunity_doc.document_content_type == 'application/msexcel' || opportunity_doc.document_content_type == 'application/vnd.ms-excel' || opportunity_doc.document_content_type =='application/vnd.openxmlformats-officedocument.spreadsheetml.sheet' %>
                    <li class="word"><a href="http://s3-eu-west-1.amazonaws.com/emf-prod/opportunity_documents/<%= opportunity_doc.id %>/<%= opportunity_doc.document_file_name %>" target="new"><%= opportunity_doc.document_file_name %></a>
                    </li>  
                  <% end %>  
                <% end %>
                </ul>
  				      <div class="clearfix">&nbsp;</div>
               </div>

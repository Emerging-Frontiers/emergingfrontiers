      <div class="featured detail">
         <!--container-->
         <div class="container">
            <div class="base"><a href="<%= investment_path %>#sec1">Featured Opportunities</a>&nbsp;/&nbsp;<%= @investment_opportunity.company_name %></div>
             <% flash.each do |name, msg| %>
               <%= content_tag :div, msg, :id => "flash_#{name}" %>

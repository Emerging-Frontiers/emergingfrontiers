            <div class="clearfix"></div>
            <div class="col-lg-9 col-md-9 col-sm-9 p0">
          <div class="col-lg-2 col-md-2 col-sm-12 ">
               <div class="clogo"><%=  image_tag("http://s3-eu-west-1.amazonaws.com/emf-prod/investment_opportunities/#{@investment_opportunity.id}/#{@investment_opportunity.logo_file_name}") %></div>
            </div>
            <div class="col-lg-10 col-md-10 col-sm-10 ">
               <div class="video">
                  <%=  image_tag("http://s3-eu-west-1.amazonaws.com/emf-prod/investment_opportunities/#{@investment_opportunity.id}/#{@investment_opportunity.banner_image_file_name}") %>

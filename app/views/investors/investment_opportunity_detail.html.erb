                  <div class="rowsec">
                  <h2>Advisory Team</h2>
                   <% @advisory_teams.each do |team| %>
                      <div class="cell">
                        <div class="col-lg-2 col-md-2 col-sm-3 col-xs-5">
                          <%= image_tag("http://s3-eu-west-1.amazonaws.com/emf-prod/teams/#{team.id}/#{team.profile_pic_file_name}",:class=>"circle") %>
                        </div>
                        <div class="col-lg-10 col-md-10 col-sm-9 col-xs-12">
                            <p><strong><%= team.user_name  %></strong> <%= team.description %></p>
                         </div>

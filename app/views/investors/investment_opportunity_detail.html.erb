                     <h4><%= @investment_opportunity.company_name %></h4>
                  </div>
                  <div class="col-lg-4 col-md-4 col-sm-4">
                     <div class="sector">
                        <p><%= @investment_opportunity.sector %></p>
                     </div>
                  </div>
                  <div class="col-lg-3 col-md-3 col-sm-3">
                     <div class="loca">
                        <p><%= @investment_opportunity.location %></p>
                     </div>

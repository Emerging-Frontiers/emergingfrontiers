      <script type="text/javascript">
function getnextstep(x)
{
//    alert("sdfsdf");
  jQuery(".checkuser_div"+x).slideToggle();
  
jQuery(".user_li").toggle();
jQuery(".user_li"+x).toggle();
}
function getregstercheck()
{ jQuery(".us_error").hide();
    if(jQuery('#us_input').is(':checked') || jQuery('#us_input1').is(':checked') || jQuery('#us_input2').is(':checked') || jQuery('#us_input3').is(':checked'))
    {
        if(jQuery("#us_term").prop("checked") == false && jQuery("#us_term1").prop("checked") == false ){
            
           
            jQuery("#us_term1").css("border","1px solid red")
            jQuery(".us_error").html("Please Accept Both  Terms of Service..");
            jQuery(".us_error").slideToggle();
            return false;
            
       
            
          }
   
   }else
    {
            jQuery(".us_error").html("Please Select Any Option");
            jQuery(".us_error").slideToggle();
            return false;

                }
    
}
function getuk_form()
{
    jQuery(".uk_error").hide();
    if(jQuery("#uk_term").prop("checked") == false|| jQuery("#uk_opyion1").prop("checked") == false || jQuery("#uk_opyion2").prop("checked") == false || jQuery("#uk_term1").prop("checked") == false || jQuery("#uk_term2").prop("checked") == false)
    {
      jQuery(".uk_error").html("Please Select Term");
      jQuery(".uk_error").slideToggle();
      return false;
    }
        
}
 function valueChanged()
{
    if($('#not_uk_us_citizen').is(":checked"))   
        $("#not_us_uk_btn").show();
    else
        $("#not_us_uk_btn").hide();
}

$(document).ready(function() {
    $('#uk_opyion2').click(function() {
        if ($(this).is(':checked')) {
            $("#landing-popup").modal("show");
        }
    });
    $("#close_popup").click(function(){
       $("#landing-popup").modal("hide");
    });
});
</script> 


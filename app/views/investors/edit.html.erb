     <div class="section2 crite contact" id="sec1">
      <div style="margin-top:10px;">
          <% flash.each do |name, msg| %>
            <%= content_tag :div, msg, :id => "flash_#{name}" %>
          <% end %>
        </div> 
         <!--container-->
         <div class="container">
            <div class="title">
               <h1>Edit Profile</h1>
            </div>
            <div class="clearfix"></div>
            <div class="col-lg-12">
               <!--<p>Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat.</p>-->
            </div>
            <div class="clearfix"></div>
            <%= form_for @investor, :url => update_profile_path ,:html => {:id=>"edit_profile"} do |f| %>
              <div class="col-lg-6 col-md-6 col-sm-6">
             
               
                <div class="cell">
                  <%= f.email_field :email, :placeholder=>"Email" ,:class=>"textfield"  ,:disabled => true %> 
                </div>
                <div class="cell">
                  <%= f.password_field :password, :placeholder=>"Password" ,:class=>"textfield",autocomplete: "off" %>
                </div>
                <div class="cell">
                  <%= f.password_field :password_confirmation, :placeholder=>"Password Confirmation" ,:class=>"textfield",autocomplete: "off" %>
                </div>
                <!--  <div class="cell">
                  <input type="checkbox" name="mailchimp_reg" checked="true"/> Subscribe To Our Newsletter
                </div> -->
              </div>
              <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="cell"> 
                  <%= f.text_field :first_name, :placeholder=>"First Name" ,:class=>"textfield" , :required => true%>       
                </div>
                <div class="cell">
                  <%= f.text_field :last_name, :placeholder=>"Last Name" ,:class=>"textfield" , :required => true %> 
                </div>
                <div class="cell">
                  <%= f.country_select :country, {priority: %w(US GB), prompt: 'Please select a country'},:class=>"textfield" , :required => true %>
                </div>
               
                <div class="cell">
                  <%= f.submit "Update", :class=>"subbtn submit-btn" %>
                </div>  
              </div>
             
              <div class="clearfix"></div>
               
            <% end %>

            <div class="clearfix"></div>
            <div class="mbtm"></div>
         </div>
         <!--container-->
      </div>

      <!--sec5-con-->
      <div class="clearfix"></div>

      
      

      <!--footer-->
      <%= render :partial => "/layouts/shared/footer.html.erb" %>
      <!--footer-->
            <!--back to top-->
      <script>  
         $(window).scroll(function() {    
         var scroll = $(window).scrollTop();
         if (scroll >= 600) {
             $("#demoTop").addClass("view", 2000);
         }   
         var scroll = $(window).scrollTop();
         if (scroll <= 600) {
             $("#demoTop").removeClass("view", 2000);
         }
         
         });     
      </script> 
          <script type = "text/javascript">
            $(function () {
                $('#scrollToTop').bind("click", function () {
                    $('html, body').animate({ scrollTop: 0 }, 800);
                    return false;
                });
              
                //Sign up button
                // $("#join-evo-submit-btn").bind("click",function(){
